<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-baby"></i> Birth Certificate Application</h3>
                </div>
                <div class="card-body">
                    <% if (typeof success !== 'undefined') { %>
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> <%= success %>
                            <% if (typeof applicationNumber !== 'undefined') { %>
                                <div class="mt-3">
                                    <strong>Please save this application number for future reference:</strong>
                                    <div class="bg-light p-3 rounded mt-2">
                                        <h4 class="text-primary mb-0"><%= applicationNumber %></h4>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>

                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/apply/birth-certificate" class="needs-validation" novalidate>
                        <!-- Applicant Details -->
                        <div class="section-header">
                            <h4 class="text-primary mb-4"><i class="fas fa-user"></i> Applicant Details</h4>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="applicantName" class="form-label">Full Name *</label>
                                <input type="text" class="form-control" id="applicantName" name="applicantName" required>
                                <div class="invalid-feedback">Please provide applicant's full name.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="relationToSubject" class="form-label">Relation to Child *</label>
                                <select class="form-select" id="relationToSubject" name="relationToSubject" required>
                                    <option value="">Select Relation</option>
                                    <option value="father">Father</option>
                                    <option value="mother">Mother</option>
                                    <option value="guardian">Guardian</option>
                                    <option value="relative">Relative</option>
                                </select>
                                <div class="invalid-feedback">Please select your relation to the child.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="applicantFatherName" class="form-label">Father's Name *</label>
                                <input type="text" class="form-control" id="applicantFatherName" name="applicantFatherName" required>
                                <div class="invalid-feedback">Please provide father's name.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="applicantMotherName" class="form-label">Mother's Name *</label>
                                <input type="text" class="form-control" id="applicantMotherName" name="applicantMotherName" required>
                                <div class="invalid-feedback">Please provide mother's name.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="applicantPhone" class="form-label">Phone Number *</label>
                                <input type="tel" class="form-control" id="applicantPhone" name="applicantPhone" pattern="[0-9]{10}" required>
                                <div class="invalid-feedback">Please provide a valid 10-digit phone number.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="applicantEmail" class="form-label">Email Address *</label>
                                <input type="email" class="form-control" id="applicantEmail" name="applicantEmail" required>
                                <div class="invalid-feedback">Please provide a valid email address.</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="applicantAddress" class="form-label">Complete Address *</label>
                            <textarea class="form-control" id="applicantAddress" name="applicantAddress" rows="3" required></textarea>
                            <div class="invalid-feedback">Please provide complete address.</div>
                        </div>

                        <hr class="my-4">

                        <!-- Child Details -->
                        <div class="section-header">
                            <h4 class="text-primary mb-4"><i class="fas fa-child"></i> Child Details</h4>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="childName" class="form-label">Child's Full Name *</label>
                                <input type="text" class="form-control" id="childName" name="childName" required>
                                <div class="invalid-feedback">Please provide child's full name.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="gender" class="form-label">Gender *</label>
                                <select class="form-select" id="gender" name="gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                </select>
                                <div class="invalid-feedback">Please select gender.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="dateOfBirth" class="form-label">Date of Birth *</label>
                                <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required>
                                <div class="invalid-feedback">Please provide date of birth.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="timeOfBirth" class="form-label">Time of Birth</label>
                                <input type="time" class="form-control" id="timeOfBirth" name="timeOfBirth">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="placeOfBirth" class="form-label">Place of Birth *</label>
                                <input type="text" class="form-control" id="placeOfBirth" name="placeOfBirth" required>
                                <div class="invalid-feedback">Please provide place of birth.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="weight" class="form-label">Weight at Birth (kg)</label>
                                <input type="text" class="form-control" id="weight" name="weight" placeholder="e.g., 3.2">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fatherName" class="form-label">Father's Full Name *</label>
                                <input type="text" class="form-control" id="fatherName" name="fatherName" required>
                                <div class="invalid-feedback">Please provide father's full name.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="motherName" class="form-label">Mother's Full Name *</label>
                                <input type="text" class="form-control" id="motherName" name="motherName" required>
                                <div class="invalid-feedback">Please provide mother's full name.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="hospitalName" class="form-label">Hospital/Institution Name</label>
                                <input type="text" class="form-control" id="hospitalName" name="hospitalName">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="doctorName" class="form-label">Attending Doctor's Name</label>
                                <input type="text" class="form-control" id="doctorName" name="doctorName">
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Required Documents -->
                        <div class="section-header">
                            <h4 class="text-primary mb-4"><i class="fas fa-file-alt"></i> Required Documents Upload</h4>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Document Upload (Optional for Testing):</h6>
                            <p class="mb-2">You can upload documents now or submit the application without documents for testing purposes. All documents should be in PDF, JPG, or PNG format (max 10MB each).</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="hospitalCertificate" class="form-label">Hospital Birth Certificate / Discharge Summary</label>
                                <input type="file" class="form-control" id="hospitalCertificate" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="hospital_birth_certificate">
                                <div class="form-text">Upload hospital issued birth certificate or discharge summary</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="fatherAadhar" class="form-label">Father's Aadhar Card</label>
                                <input type="file" class="form-control" id="fatherAadhar" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="parent_aadhar_father">
                                <div class="form-text">Upload father's Aadhar card (both sides)</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="motherAadhar" class="form-label">Mother's Aadhar Card</label>
                                <input type="file" class="form-control" id="motherAadhar" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="parent_aadhar_mother">
                                <div class="form-text">Upload mother's Aadhar card (both sides)</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="marriageCertificate" class="form-label">Marriage Certificate</label>
                                <input type="file" class="form-control" id="marriageCertificate" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="parent_marriage_certificate">
                                <div class="form-text">Upload parents' marriage certificate (if available)</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="addressProof" class="form-label">Address Proof</label>
                                <input type="file" class="form-control" id="addressProof" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="parent_address_proof">
                                <div class="form-text">Utility bill, rent agreement, or other address proof</div>
                            </div>
                            <div class="col-md-6 mb-3" id="affidavitSection" style="display: none;">
                                <label for="affidavit" class="form-label">Affidavit for Delayed Registration</label>
                                <input type="file" class="form-control" id="affidavit" name="documents" 
                                       accept=".pdf,.jpg,.jpeg,.png" data-doc-type="affidavit_delayed_registration">
                                <div class="form-text">Required if birth is registered after 1 year</div>
                            </div>
                        </div>

                        <div class="upload-progress" id="uploadProgress" style="display: none;">
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                            <div class="upload-status"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-rupee-sign"></i> Fee Structure</h6>
                                        <ul class="list-unstyled mb-0">
                                            <li>Within 21 days: <strong>Free</strong></li>
                                            <li>Within 1 year: <strong>₹50</strong></li>
                                            <li>After 1 year: <strong>₹100</strong></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-clock"></i> Processing Time</h6>
                                        <p class="mb-0">7-10 working days after document verification</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-paper-plane"></i> Submit Application
                            </button>
                            <a href="/check-status" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i> Check Status
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Bootstrap form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();

// Auto-fill father/mother names if same as applicant
document.getElementById('applicantName').addEventListener('blur', function() {
    const relation = document.getElementById('relationToSubject').value;
    if (relation === 'father') {
        document.getElementById('fatherName').value = this.value;
    } else if (relation === 'mother') {
        document.getElementById('motherName').value = this.value;
    }
});

// Show affidavit section if birth is more than 1 year old
document.getElementById('dateOfBirth').addEventListener('change', function() {
    const birthDate = new Date(this.value);
    const oneYearAgo = new Date();
    oneYearAgo.setFullYear(oneYearAgo.getFullYear() - 1);
    
    const affidavitSection = document.getElementById('affidavitSection');
    if (birthDate < oneYearAgo) {
        affidavitSection.style.display = 'block';
        document.getElementById('affidavit').required = true;
    } else {
        affidavitSection.style.display = 'none';
        document.getElementById('affidavit').required = false;
    }
});

// Handle form submission with file uploads
document.querySelector('form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const submitBtn = document.getElementById('submitBtn');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
    submitBtn.disabled = true;
    
    try {
        // First submit the application data
        const formData = new FormData(this);
        
        // Remove file inputs from form data for initial submission
        const fileInputs = this.querySelectorAll('input[type="file"]');
        fileInputs.forEach(input => {
            formData.delete(input.name);
        });
        
        const response = await fetch('/apply/birth-certificate', {
            method: 'POST',
            body: formData
        });
        
        const result = await response.text();
        
        // If application was created successfully, extract application number and upload files
        if (result.includes('Application submitted successfully')) {
            const applicationNumberMatch = result.match(/([A-Z]{2}\d{8})/);
            if (applicationNumberMatch) {
                const applicationNumber = applicationNumberMatch[1];
                await uploadDocuments(applicationNumber, fileInputs);
            }
        }
        
        // Show the result
        document.body.innerHTML = result;
        
    } catch (error) {
        console.error('Submission error:', error);
        alert('Failed to submit application. Please try again.');
    } finally {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }
});

async function uploadDocuments(applicationNumber, fileInputs) {
    const uploadProgress = document.getElementById('uploadProgress');
    const progressBar = uploadProgress.querySelector('.progress-bar');
    const statusDiv = uploadProgress.querySelector('.upload-status');
    
    uploadProgress.style.display = 'block';
    statusDiv.textContent = 'Uploading documents...';
    
    // Find application by number to get ID
    const appResponse = await fetch(`/api/applications/by-number/${applicationNumber}`);
    const appData = await appResponse.json();
    
    if (!appData.success) {
        console.error('Could not find application for document upload');
        return;
    }
    
    const applicationId = appData.data._id;
    const uploadFormData = new FormData();
    const documentTypes = [];
    let fileCount = 0;
    
    // Collect files and their types
    fileInputs.forEach(input => {
        if (input.files.length > 0) {
            uploadFormData.append('documents', input.files[0]);
            documentTypes.push(input.dataset.docType);
            fileCount++;
        }
    });
    
    if (fileCount === 0) {
        uploadProgress.style.display = 'none';
        return;
    }
    
    // Add document types
    documentTypes.forEach(type => {
        uploadFormData.append('documentTypes', type);
    });
    
    try {
        const uploadResponse = await fetch(`/upload/documents/${applicationId}`, {
            method: 'POST',
            body: uploadFormData
        });
        
        const uploadResult = await uploadResponse.json();
        
        if (uploadResult.success) {
            progressBar.style.width = '100%';
            statusDiv.textContent = `${uploadResult.uploadedDocuments.length} documents uploaded successfully!`;
        } else {
            statusDiv.textContent = 'Some documents failed to upload. Please contact support.';
        }
    } catch (error) {
        console.error('Upload error:', error);
        statusDiv.textContent = 'Document upload failed. Please contact support.';
    }
}
</script>

<%- include('../partials/footer') %>