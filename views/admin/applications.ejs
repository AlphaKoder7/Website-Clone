<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Applications</h2>
            <div class="btn-group">
                <a href="/admin/applications" class="btn <%= !currentType && !currentStatus ? 'btn-primary' : 'btn-outline-primary' %>">All</a>
                <a href="/admin/applications?type=birth" class="btn <%= currentType === 'birth' ? 'btn-success' : 'btn-outline-success' %>">Birth</a>
                <a href="/admin/applications?type=death" class="btn <%= currentType === 'death' ? 'btn-dark' : 'btn-outline-dark' %>">Death</a>
                <a href="/admin/applications?status=pending" class="btn <%= currentStatus === 'pending' ? 'btn-warning' : 'btn-outline-warning' %>">Pending</a>
                <a href="/admin/applications?status=under-review" class="btn <%= currentStatus === 'under-review' ? 'btn-info' : 'btn-outline-info' %>">Under Review</a>
                <a href="/admin/applications?status=completed" class="btn <%= currentStatus === 'completed' ? 'btn-success' : 'btn-outline-success' %>">Completed</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Application #</th>
                                <th>Type</th>
                                <th>Applicant</th>
                                <th>Subject</th>
                                <th>Applied Date</th>
                                <th>Status</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (applications && applications.length > 0) { %>
                                <% applications.forEach(application => { %>
                                    <tr>
                                        <td>
                                            <strong><%= application.applicationNumber %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= application.type === 'birth' ? 'success' : 'dark' %>">
                                                <i class="fas fa-<%= application.type === 'birth' ? 'baby' : 'cross' %>"></i>
                                                <%= application.type.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td>
                                            <div>
                                                <strong><%= application.applicantDetails.name %></strong><br>
                                                <small class="text-muted"><%= application.applicantDetails.phone %></small>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <strong><%= application.subjectDetails.name %></strong><br>
                                                <small class="text-muted">
                                                    <%= application.subjectDetails.gender %>, 
                                                    <%= application.subjectDetails.dateOfEvent.toLocaleDateString() %>
                                                </small>
                                            </div>
                                        </td>
                                        <td><%= application.createdAt.toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                application.status === 'pending' ? 'warning' : 
                                                application.status === 'under-review' ? 'info' : 
                                                application.status === 'approved' ? 'primary' : 
                                                application.status === 'completed' ? 'success' : 'danger' 
                                            %>">
                                                <%= application.status.toUpperCase().replace('-', ' ') %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= application.documents.length %> files
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/admin/applications/<%= application._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center">No applications found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>