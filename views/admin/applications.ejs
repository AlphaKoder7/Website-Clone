<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Applications</h2>
            <div class="btn-group">
                <a href="/admin/applications" class="btn <%= !currentType && !currentStatus && !currentStage ? 'btn-primary' : 'btn-outline-primary' %>">All</a>
                <a href="/admin/applications?type=birth" class="btn <%= currentType === 'birth' ? 'btn-success' : 'btn-outline-success' %>">Birth</a>
                <a href="/admin/applications?type=death" class="btn <%= currentType === 'death' ? 'btn-dark' : 'btn-outline-dark' %>">Death</a>
            </div>
        </div>
        
        <!-- Stage-based filtering -->
        <div class="mb-4">
            <h5>Filter by Stage:</h5>
            <div class="btn-group">
                <a href="/admin/applications?currentStage=submitted" class="btn <%= currentStage === 'submitted' ? 'btn-info' : 'btn-outline-info' %>">
                    <i class="fas fa-paper-plane"></i> Submitted
                </a>
                <a href="/admin/applications?currentStage=document-verification" class="btn <%= currentStage === 'document-verification' ? 'btn-warning' : 'btn-outline-warning' %>">
                    <i class="fas fa-file-check"></i> Document Verification
                </a>
                <a href="/admin/applications?currentStage=field-verification" class="btn <%= currentStage === 'field-verification' ? 'btn-primary' : 'btn-outline-primary' %>">
                    <i class="fas fa-search"></i> Field Verification
                </a>
                <a href="/admin/applications?currentStage=approval" class="btn <%= currentStage === 'approval' ? 'btn-success' : 'btn-outline-success' %>">
                    <i class="fas fa-check-circle"></i> Approval
                </a>
                <a href="/admin/applications?currentStage=certificate-generation" class="btn <%= currentStage === 'certificate-generation' ? 'btn-purple' : 'btn-outline-purple' %>">
                    <i class="fas fa-certificate"></i> Certificate Generation
                </a>
                <a href="/admin/applications?currentStage=completed" class="btn <%= currentStage === 'completed' ? 'btn-dark' : 'btn-outline-dark' %>">
                    <i class="fas fa-flag-checkered"></i> Completed
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Application #</th>
                                <th>Type</th>
                                <th>Applicant</th>
                                <th>Subject</th>
                                <th>Applied Date</th>
                                <th>Current Stage</th>
                                <th>Progress</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (applications && applications.length > 0) { %>
                                <% applications.forEach(application => { %>
                                    <tr>
                                        <td>
                                            <strong><%= application.applicationNumber %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= application.type === 'birth' ? 'success' : 'dark' %>">
                                                <i class="fas fa-<%= application.type === 'birth' ? 'baby' : 'cross' %>"></i>
                                                <%= application.type.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td>
                                            <div>
                                                <strong><%= application.applicantDetails.name %></strong><br>
                                                <small class="text-muted"><%= application.applicantDetails.phone %></small>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <strong><%= application.subjectDetails.name %></strong><br>
                                                <small class="text-muted">
                                                    <%= application.subjectDetails.gender %>, 
                                                    <%= application.subjectDetails.dateOfEvent.toLocaleDateString() %>
                                                </small>
                                            </div>
                                        </td>
                                        <td><%= application.createdAt.toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                application.currentStage === 'submitted' ? 'info' : 
                                                application.currentStage === 'document-verification' ? 'warning' : 
                                                application.currentStage === 'field-verification' ? 'primary' : 
                                                application.currentStage === 'approval' ? 'success' : 
                                                application.currentStage === 'certificate-generation' ? 'purple' : 'dark' 
                                            %>">
                                                <%= application.currentStage.replace('-', ' ').toUpperCase() %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-<%= 
                                                    application.currentStage === 'submitted' ? 'info' : 
                                                    application.currentStage === 'document-verification' ? 'warning' : 
                                                    application.currentStage === 'field-verification' ? 'primary' : 
                                                    application.currentStage === 'approval' ? 'success' : 
                                                    application.currentStage === 'certificate-generation' ? 'purple' : 'success' 
                                                %>" 
                                                style="width: <%= 
                                                    application.currentStage === 'submitted' ? '16' : 
                                                    application.currentStage === 'document-verification' ? '33' : 
                                                    application.currentStage === 'field-verification' ? '50' : 
                                                    application.currentStage === 'approval' ? '66' : 
                                                    application.currentStage === 'certificate-generation' ? '83' : '100' 
                                                %>%">
                                                    <%= 
                                                        application.currentStage === 'submitted' ? '16%' : 
                                                        application.currentStage === 'document-verification' ? '33%' : 
                                                        application.currentStage === 'field-verification' ? '50%' : 
                                                        application.currentStage === 'approval' ? '66%' : 
                                                        application.currentStage === 'certificate-generation' ? '83%' : '100%' 
                                                    %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= application.documents.length %> files
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/admin/applications/<%= application._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center">No applications found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>