<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Contacts</h2>
            <div class="btn-group">
                <button class="btn btn-outline-primary" onclick="filterContacts('all')">All</button>
                <button class="btn btn-outline-warning" onclick="filterContacts('pending')">Pending</button>
                <button class="btn btn-outline-info" onclick="filterContacts('in-progress')">In Progress</button>
                <button class="btn btn-outline-success" onclick="filterContacts('resolved')">Resolved</button>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (contacts && contacts.length > 0) { %>
                                <% contacts.forEach(contact => { %>
                                    <tr data-status="<%= contact.status %>">
                                        <td><%= contact.name %></td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.subject %></td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= contact.department %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= contact.status === 'pending' ? 'warning' : contact.status === 'in-progress' ? 'info' : contact.status === 'resolved' ? 'success' : 'secondary' %>">
                                                <%= contact.status %>
                                            </span>
                                        </td>
                                        <td><%= contact.createdAt.toLocaleDateString() %></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" onclick="viewContact('<%= contact._id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-success" onclick="respondContact('<%= contact._id %>')">
                                                <i class="fas fa-reply"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">No contacts found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Details Modal -->
    <div class="modal fade" id="contactModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Contact Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="contactModalBody">
                    <!-- Content will be loaded dynamically -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="respondToContact()">Respond</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterContacts(status) {
            const rows = document.querySelectorAll('tbody tr[data-status]');
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function viewContact(id) {
            // This would fetch contact details and show in modal
            const modalBody = document.getElementById('contactModalBody');
            modalBody.innerHTML = '<p>Contact details would be loaded here...</p>';
            
            const modal = new bootstrap.Modal(document.getElementById('contactModal'));
            modal.show();
        }

        function respondContact(id) {
            // This would open a response form
            alert('Response functionality would be implemented here');
        }

        function respondToContact() {
            // Handle response submission
            alert('Response sent successfully!');
        }
    </script>
</body>
</html>