<%- include('partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <h2>Contact Us</h2>
            <p class="lead">Get in touch with us for any queries, complaints, or suggestions.</p>

            <% if (typeof success !== 'undefined') { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>

            <form method="POST" action="/contact" class="contact-form">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Full Name *</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address *</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="department" class="form-label">Department</label>
                        <select class="form-select" id="department" name="department">
                            <option value="general">General Inquiry</option>
                            <option value="health">Health Department</option>
                            <option value="education">Education Department</option>
                            <option value="engineering">Engineering Department</option>
                            <option value="accounts">Accounts Department</option>
                            <option value="legal">Legal Department</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject *</label>
                    <input type="text" class="form-control" id="subject" name="subject" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message *</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i> Send Message
                </button>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="contact-info-sidebar">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-map-marker-alt"></i> Office Address</h5>
                    </div>
                    <div class="card-body">
                        <p>Pune Cantonment Board<br>
                        Wanowrie, Pune - 411040<br>
                        Maharashtra, India</p>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-phone"></i> Contact Numbers</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Main Office:</strong> +91-20-26331394</p>
                        <p><strong>Fax:</strong> +91-20-26331395</p>
                        <p><strong>Emergency:</strong> +91-20-26331396</p>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-envelope"></i> Email Addresses</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>General:</strong> info@pune.cantt.gov.in</p>
                        <p><strong>CEO:</strong> ceo@pune.cantt.gov.in</p>
                        <p><strong>Complaints:</strong> complaints@pune.cantt.gov.in</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-clock"></i> Office Hours</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Monday - Friday:</strong><br>10:00 AM - 5:00 PM</p>
                        <p><strong>Saturday:</strong><br>10:00 AM - 2:00 PM</p>
                        <p><strong>Sunday:</strong><br>Closed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Location Map</h3>
            <div class="map-container">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.5234567890123!2d73.8567890!3d18.5204303!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTjCsDMxJzEzLjUiTiA3M8KwNTEnMjQuNCJF!5e0!3m2!1sen!2sin!4v1234567890123"
                    width="100%" 
                    height="400" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy">
                </iframe>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>