<%- include('partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h2>Citizen Services</h2>
            <p class="lead">Explore the various services offered by Pune Cantonment Board for the convenience of citizens.</p>
        </div>
    </div>

    <div class="row">
        <% if (services && services.length > 0) { %>
            <% services.forEach(service => { %>
                <div class="col-lg-6 mb-4">
                    <div class="service-detail-card card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-<%= service.category === 'health' ? 'heartbeat' : service.category === 'education' ? 'graduation-cap' : service.category === 'infrastructure' ? 'building' : service.category === 'utilities' ? 'tools' : 'cogs' %>"></i>
                                <%= service.name %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><%= service.description %></p>
                            
                            <div class="service-details">
                                <h6><i class="fas fa-list-ul"></i> Requirements:</h6>
                                <ul class="small">
                                    <% service.requirements.forEach(req => { %>
                                        <li><%= req %></li>
                                    <% }) %>
                                </ul>
                                
                                <h6><i class="fas fa-route"></i> Procedure:</h6>
                                <ol class="small">
                                    <% service.procedure.forEach(step => { %>
                                        <li><%= step.description %></li>
                                    <% }) %>
                                </ol>
                                
                                <div class="row">
                                    <div class="col-6">
                                        <h6><i class="fas fa-rupee-sign"></i> Fee:</h6>
                                        <p class="text-primary font-weight-bold">â‚¹<%= service.fees.amount %></p>
                                    </div>
                                    <div class="col-6">
                                        <h6><i class="fas fa-clock"></i> Processing Time:</h6>
                                        <p class="text-info"><%= service.processingTime %></p>
                                    </div>
                                </div>
                                
                                <% if (service.contactPerson) { %>
                                    <div class="contact-person bg-light p-3 rounded">
                                        <h6><i class="fas fa-user"></i> Contact Person:</h6>
                                        <p class="mb-1"><strong><%= service.contactPerson.name %></strong></p>
                                        <p class="mb-1 small"><%= service.contactPerson.designation %></p>
                                        <p class="mb-1 small"><i class="fas fa-phone"></i> <%= service.contactPerson.phone %></p>
                                        <p class="mb-0 small"><i class="fas fa-envelope"></i> <%= service.contactPerson.email %></p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card-footer">
                            <% if (service.name.toLowerCase().includes('birth')) { %>
                                <a href="/apply/birth-certificate" class="btn btn-primary btn-sm">
                                    <i class="fas fa-file-alt"></i> Apply Online
                                </a>
                            <% } else if (service.name.toLowerCase().includes('death')) { %>
                                <a href="/apply/death-certificate" class="btn btn-dark btn-sm">
                                    <i class="fas fa-file-alt"></i> Apply Online
                                </a>
                            <% } else { %>
                                <button class="btn btn-primary btn-sm" onclick="applyForService('<%= service._id %>')">
                                    <i class="fas fa-file-alt"></i> Apply Online
                                </button>
                            <% } %>
                            <button class="btn btn-outline-secondary btn-sm ms-2" onclick="downloadForm('<%= service._id %>')">
                                <i class="fas fa-download"></i> Download Form
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <i class="fas fa-cogs fa-5x text-muted mb-3"></i>
                <h4>No Services Available</h4>
                <p class="text-muted">Services information will be updated soon.</p>
            </div>
        <% } %>
    </div>

    <!-- Service Categories -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Service Categories</h3>
            <div class="row">
                <div class="col-md-2 mb-3">
                    <div class="category-card text-center p-3 border rounded">
                        <i class="fas fa-heartbeat fa-2x text-danger mb-2"></i>
                        <h6>Health Services</h6>
                        <a href="/services?category=health" class="btn btn-sm btn-outline-danger">View</a>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="category-card text-center p-3 border rounded">
                        <i class="fas fa-graduation-cap fa-2x text-success mb-2"></i>
                        <h6>Education</h6>
                        <a href="/services?category=education" class="btn btn-sm btn-outline-success">View</a>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="category-card text-center p-3 border rounded">
                        <i class="fas fa-building fa-2x text-primary mb-2"></i>
                        <h6>Infrastructure</h6>
                        <a href="/services?category=infrastructure" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="category-card text-center p-3 border rounded">
                        <i class="fas fa-tools fa-2x text-warning mb-2"></i>
                        <h6>Utilities</h6>
                        <a href="/services?category=utilities" class="btn btn-sm btn-outline-warning">View</a>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <div class="category-card text-center p-3 border rounded">
                        <i class="fas fa-cogs fa-2x text-info mb-2"></i>
                        <h6>Administration</h6>
                        <a href="/services?category=administration" class="btn btn-sm btn-outline-info">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Service Application Modal -->
<div class="modal fade" id="serviceModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Apply for Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Online service application will be available soon. For now, please visit our office or contact the respective department.</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Office Address:</strong> Pune Cantonment Board, Wanowrie, Pune - 411040<br>
                    <strong>Office Hours:</strong> Monday to Friday: 10:00 AM - 5:00 PM, Saturday: 10:00 AM - 2:00 PM
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="/contact" class="btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>
</div>

<script>
function applyForService(serviceId) {
    const modal = new bootstrap.Modal(document.getElementById('serviceModal'));
    modal.show();
}

function downloadForm(serviceId) {
    // Placeholder for form download functionality
    alert('Form download will be available soon. Please visit our office for physical forms.');
}
</script>

<%- include('partials/footer') %>